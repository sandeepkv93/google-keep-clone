version: '3'

vars:
  BACKEND_DIR: ./backend
  FRONTEND_DIR: ./frontend
  API_TESTS_DIR: ./api-tests
  DOCKER_DIR: ./docker
  
  # Database configuration
  DB_NAME: google_keep_clone
  DB_USER: postgres
  DB_PASS: postgres
  DB_HOST: localhost
  DB_PORT: 5432
  
  # Server configuration
  SERVER_PORT: 8080
  FRONTEND_PORT: 5173
  
  # Docker configuration
  POSTGRES_IMAGE: postgres:15-alpine
  REDIS_IMAGE: redis:7-alpine

env:
  DATABASE_URL: postgres://{{.DB_USER}}:{{.DB_PASS}}@{{.DB_HOST}}:{{.DB_PORT}}/{{.DB_NAME}}?sslmode=disable
  REDIS_URL: redis://localhost:6379
  JWT_SECRET: dev-secret-key-change-in-production
  ENVIRONMENT: development
  PORT: "{{.SERVER_PORT}}"

tasks:
  # =============================================================================
  # HELP AND INFORMATION
  # =============================================================================
  
  default:
    desc: Show available tasks
    cmds:
      - task --list-all
    silent: true

  help:
    desc: Show detailed help for all tasks
    cmds:
      - echo "Google Keep Clone - Task Runner"
      - echo "================================"
      - echo ""
      - echo "Quick Start:"
      - echo "  task setup     - Install all dependencies"
      - echo "  task dev       - Start development environment"
      - echo "  task build     - Build production artifacts"
      - echo "  task test      - Run all tests"
      - echo ""
      - echo "For detailed task list run: task --list-all"
    silent: true

  info:
    desc: Show project information and status
    cmds:
      - echo "Google Keep Clone Project Status"
      - echo "==============================="
      - echo ""
      - echo "Backend (Go):"
      - cd {{.BACKEND_DIR}} && go version 2>/dev/null || echo "  âŒ Go not installed"
      - test -f {{.BACKEND_DIR}}/go.mod && echo "  âœ… Go module initialized" || echo "  âŒ Go module not found"
      - echo ""
      - echo "Frontend (Node.js):"
      - cd {{.FRONTEND_DIR}} && node --version 2>/dev/null || echo "  âŒ Node.js not installed"
      - test -f {{.FRONTEND_DIR}}/package.json && echo "  âœ… Package.json found" || echo "  âŒ Package.json not found"
      - echo ""
      - echo "Database:"
      - docker ps --filter "name=postgres" --format "table {{.Names}}\t{{.Status}}" | grep -q postgres && echo "  âœ… PostgreSQL running" || echo "  âŒ PostgreSQL not running"
      - docker ps --filter "name=redis" --format "table {{.Names}}\t{{.Status}}" | grep -q redis && echo "  âœ… Redis running" || echo "  âŒ Redis not running"
    silent: true

  # =============================================================================
  # SETUP AND INSTALLATION
  # =============================================================================
  
  setup:
    desc: Install all dependencies and setup the project
    cmds:
      - task: setup:backend
      - task: setup:frontend
      - task: setup:env
      - echo "âœ… Project setup complete!"
      - echo "ðŸ’¡ Run 'task dev' to start development"

  "setup:backend":
    desc: Setup backend dependencies
    dir: "{{.BACKEND_DIR}}"
    cmds:
      - echo "ðŸ“¦ Installing Go dependencies..."
      - go mod tidy
      - go mod download
      - echo "âœ… Backend dependencies installed"

  "setup:frontend":
    desc: Setup frontend dependencies
    dir: "{{.FRONTEND_DIR}}"
    cmds:
      - echo "ðŸ“¦ Installing Node.js dependencies..."
      - npm install
      - echo "âœ… Frontend dependencies installed"

  "setup:env":
    desc: Setup environment configuration
    cmds:
      - |
        if [ ! -f .env ]; then
          echo "ðŸ“ Creating .env file from template..."
          cp .env.example .env
          echo "âœ… Environment file created"
        else
          echo "âœ… Environment file already exists"
        fi
    status:
      - test -f .env

  # =============================================================================
  # DEVELOPMENT
  # =============================================================================
  
  dev:
    desc: Start full development environment (database + backend + frontend)
    deps: [db:start]
    cmds:
      - echo "ðŸš€ Starting development environment..."
      - task: "dev:parallel"

  "dev:parallel":
    desc: Run backend and frontend in parallel
    deps: [db:wait]
    cmds:
      - |
        # Start backend and frontend in parallel
        (task dev:backend > backend.log 2>&1 &)
        (task dev:frontend > frontend.log 2>&1 &)
        
        echo "ðŸ”— Development servers starting..."
        echo "ðŸ“Š Backend: http://localhost:{{.SERVER_PORT}}"
        echo "ðŸŒ Frontend: http://localhost:{{.FRONTEND_PORT}}"
        echo "ðŸ¥ Health check: http://localhost:{{.SERVER_PORT}}/health"
        echo ""
        echo "ðŸ“‹ Logs:"
        echo "  Backend:  tail -f backend.log"
        echo "  Frontend: tail -f frontend.log"
        echo ""
        echo "â¹ï¸  Stop with: task dev:stop"
        
        # Wait for user interrupt
        trap 'task dev:stop' INT
        wait

  "dev:backend":
    desc: Start backend development server
    dir: "{{.BACKEND_DIR}}"
    deps: [db:wait]
    cmds:
      - echo "ðŸ”¥ Starting backend server on port {{.SERVER_PORT}}..."
      - |
        if command -v air > /dev/null; then
          air
        else
          echo "âš ï¸  Air not installed, using go run (no hot reload)"
          go run "cmd/server/main.go"
        fi

  "dev:frontend":
    desc: Start frontend development server
    dir: "{{.FRONTEND_DIR}}"
    cmds:
      - echo "âš›ï¸  Starting frontend server on port {{.FRONTEND_PORT}}..."
      - npm run dev

  dev:stop:
    desc: Stop all development servers
    cmds:
      - echo "ðŸ›‘ Stopping development servers..."
      - pkill -f "air" || true
      - pkill -f "go run" || true
      - pkill -f "vite" || true
      - pkill -f "npm run dev" || true
      - echo "âœ… Development servers stopped"

  # =============================================================================
  # DATABASE MANAGEMENT
  # =============================================================================
  
  db:start:
    desc: Start PostgreSQL and Redis with Docker
    cmds:
      - echo "ðŸ³ Starting database services..."
      - |
        # Start PostgreSQL
        if ! docker ps --filter "name=postgres" --format "{{.Names}}" | grep -q postgres; then
          echo "ðŸ“€ Starting PostgreSQL..."
          docker run -d \
            --name postgres \
            -e POSTGRES_DB={{.DB_NAME}} \
            -e POSTGRES_USER={{.DB_USER}} \
            -e POSTGRES_PASSWORD={{.DB_PASS}} \
            -p {{.DB_PORT}}:5432 \
            {{.POSTGRES_IMAGE}}
        else
          echo "âœ… PostgreSQL already running"
        fi
        
        # Start Redis
        if ! docker ps --filter "name=redis" --format "{{.Names}}" | grep -q redis; then
          echo "ðŸ”´ Starting Redis..."
          docker run -d \
            --name redis \
            -p 6379:6379 \
            {{.REDIS_IMAGE}}
        else
          echo "âœ… Redis already running"
        fi

  db:wait:
    desc: Wait for database to be ready
    cmds:
      - echo "â³ Waiting for PostgreSQL to be ready..."
      - |
        for i in {1..30}; do
          if docker exec postgres pg_isready -U {{.DB_USER}} > /dev/null 2>&1; then
            echo "âœ… PostgreSQL is ready"
            break
          fi
          echo "  Waiting... ($i/30)"
          sleep 2
        done

  db:stop:
    desc: Stop database services
    cmds:
      - echo "ðŸ›‘ Stopping database services..."
      - docker stop postgres redis 2>/dev/null || true
      - echo "âœ… Database services stopped"

  db:clean:
    desc: Remove database containers and volumes
    cmds:
      - echo "ðŸ§¹ Cleaning database containers..."
      - docker stop postgres redis 2>/dev/null || true
      - docker rm postgres redis 2>/dev/null || true
      - docker volume prune -f
      - echo "âœ… Database containers cleaned"

  db:reset:
    desc: Reset database (stop, clean, start)
    cmds:
      - task: db:stop
      - task: db:clean
      - task: db:start
      - task: db:wait
      - echo "â™»ï¸  Database reset complete"

  db:logs:
    desc: Show database logs
    cmds:
      - echo "ðŸ“‹ PostgreSQL logs:"
      - docker logs postgres --tail=50 -f

  # =============================================================================
  # BUILDING
  # =============================================================================
  
  build:
    desc: Build production artifacts for both frontend and backend
    cmds:
      - task: "build:frontend"
      - task: "build:backend"
      - echo "ðŸŽ‰ Build complete!"

  "build:frontend":
    desc: Build frontend for production
    dir: "{{.FRONTEND_DIR}}"
    cmds:
      - echo "âš›ï¸  Building frontend..."
      - npm run build
      - echo "âœ… Frontend build complete"

  "build:backend":
    desc: Build backend binary
    dir: "{{.BACKEND_DIR}}"
    cmds:
      - echo "ðŸ”¨ Building backend..."
      - mkdir -p bin
      - go build -o bin/server "cmd/server/main.go"
      - echo "âœ… Backend build complete: {{.BACKEND_DIR}}/bin/server"

  # =============================================================================
  # TESTING
  # =============================================================================
  
  test:
    desc: Run all tests
    cmds:
      - task: "test:backend"
      - task: "test:frontend"
      - echo "ðŸ§ª All tests complete!"

  "test:backend":
    desc: Run backend tests
    dir: "{{.BACKEND_DIR}}"
    cmds:
      - echo "ðŸ§ª Running backend tests..."
      - go test ./... -v
      - echo "âœ… Backend tests passed"

  "test:frontend":
    desc: Run frontend tests
    dir: "{{.FRONTEND_DIR}}"
    cmds:
      - echo "ðŸ§ª Running frontend tests..."
      - npm run test -- --run
      - echo "âœ… Frontend tests passed"

  "test:watch":
    desc: Run tests in watch mode
    cmds:
      - echo "ðŸ‘€ Starting test watchers..."
      - echo "Backend tests will run on file changes..."
      - |
        # Run backend tests in watch mode
        cd {{.BACKEND_DIR}} && go test ./... -watch &
        # Run frontend tests in watch mode
        cd {{.FRONTEND_DIR}} && npm run test &
        wait

  "test:api":
    desc: Test API endpoints (requires running server)
    cmds:
      - echo "ðŸŒ Testing API endpoints..."
      - |
        echo "Testing health endpoint..."
        curl -f http://localhost:{{.SERVER_PORT}}/health || echo "âŒ Server not running"
        echo ""
        echo "ðŸ’¡ Use REST client with files in {{.API_TESTS_DIR}}/ for comprehensive API testing"

  # =============================================================================
  # LINTING AND FORMATTING
  # =============================================================================
  
  lint:
    desc: Run linting for both frontend and backend
    cmds:
      - task: "lint:backend"
      - task: "lint:frontend"

  "lint:backend":
    desc: Run Go linting
    dir: "{{.BACKEND_DIR}}"
    cmds:
      - echo "ðŸ” Running Go linting..."
      - |
        if command -v golangci-lint > /dev/null; then
          golangci-lint run
        else
          echo "âš ï¸  golangci-lint not installed, running go vet instead"
          go vet ./...
        fi
      - echo "âœ… Backend linting complete"

  "lint:frontend":
    desc: Run frontend linting
    dir: "{{.FRONTEND_DIR}}"
    cmds:
      - echo "ðŸ” Running frontend linting..."
      - npm run lint
      - echo "âœ… Frontend linting complete"

  format:
    desc: Format code for both frontend and backend
    cmds:
      - task: "format:backend"
      - task: "format:frontend"

  "format:backend":
    desc: Format Go code
    dir: "{{.BACKEND_DIR}}"
    cmds:
      - echo "ðŸŽ¨ Formatting Go code..."
      - go fmt ./...
      - echo "âœ… Backend formatting complete"

  "format:frontend":
    desc: Format frontend code
    dir: "{{.FRONTEND_DIR}}"
    cmds:
      - echo "ðŸŽ¨ Formatting frontend code..."
      - npm run format || echo "âš ï¸  Format script not available"
      - echo "âœ… Frontend formatting complete"

  # =============================================================================
  # DOCKER OPERATIONS
  # =============================================================================
  
  "docker:build":
    desc: Build Docker images for production
    cmds:
      - echo "ðŸ³ Building Docker images..."
      - docker build -f {{.DOCKER_DIR}}/Dockerfile.backend -t google-keep-clone-backend .
      - docker build -f {{.DOCKER_DIR}}/Dockerfile.frontend -t google-keep-clone-frontend .
      - echo "âœ… Docker images built"

  "docker:up":
    desc: Start production environment with Docker Compose
    dir: "{{.DOCKER_DIR}}"
    cmds:
      - echo "ðŸ³ Starting production environment..."
      - docker-compose up -d
      - echo "âœ… Production environment started"

  "docker:down":
    desc: Stop Docker Compose environment
    dir: "{{.DOCKER_DIR}}"
    cmds:
      - echo "ðŸ›‘ Stopping Docker Compose environment..."
      - docker-compose down
      - echo "âœ… Docker environment stopped"

  "docker:logs":
    desc: Show Docker Compose logs
    dir: "{{.DOCKER_DIR}}"
    cmds:
      - docker-compose logs -f

  # =============================================================================
  # UTILITIES AND MAINTENANCE
  # =============================================================================
  
  clean:
    desc: Clean all build artifacts and dependencies
    cmds:
      - task: "clean:backend"
      - task: "clean:frontend"
      - echo "âœ… Cleanup complete"

  "clean:backend":
    desc: Clean backend build artifacts
    dir: "{{.BACKEND_DIR}}"
    cmds:
      - echo "ðŸ§¹ Cleaning backend..."
      - go clean
      - rm -rf bin/
      - echo "âœ… Backend cleaned"

  "clean:frontend":
    desc: Clean frontend build artifacts and dependencies
    dir: "{{.FRONTEND_DIR}}"
    cmds:
      - echo "ðŸ§¹ Cleaning frontend..."
      - rm -rf dist/
      - rm -rf node_modules/
      - echo "âœ… Frontend cleaned"

  "deps:update":
    desc: Update all dependencies
    cmds:
      - task: "deps:update:backend"
      - task: "deps:update:frontend"

  "deps:update:backend":
    desc: Update Go dependencies
    dir: "{{.BACKEND_DIR}}"
    cmds:
      - echo "â¬†ï¸  Updating Go dependencies..."
      - go get -u ./...
      - go mod tidy
      - echo "âœ… Go dependencies updated"

  "deps:update:frontend":
    desc: Update Node.js dependencies
    dir: "{{.FRONTEND_DIR}}"
    cmds:
      - echo "â¬†ï¸  Updating Node.js dependencies..."
      - npm update
      - echo "âœ… Node.js dependencies updated"

  # =============================================================================
  # DEVELOPMENT TOOLS
  # =============================================================================
  
  "tools:install":
    desc: Install useful development tools
    cmds:
      - echo "ðŸ”§ Installing development tools..."
      - |
        # Install Air for Go hot reloading
        if ! command -v air > /dev/null; then
          echo "Installing Air for Go hot reloading..."
          go install github.com/cosmtrek/air@latest
        fi
        
        # Install golangci-lint
        if ! command -v golangci-lint > /dev/null; then
          echo "Installing golangci-lint..."
          go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest
        fi
        
        # Install swag for API documentation
        if ! command -v swag > /dev/null; then
          echo "Installing swag for API docs..."
          go install github.com/swaggo/swag/cmd/swag@latest
        fi
      - echo "âœ… Development tools installed"

  "docs:generate":
    desc: Generate API documentation
    dir: "{{.BACKEND_DIR}}"
    cmds:
      - echo "ðŸ“š Generating API documentation..."
      - |
        if command -v swag > /dev/null; then
          swag init -g "cmd/server/main.go" -o docs/
          echo "âœ… API docs generated in {{.BACKEND_DIR}}/docs/"
        else
          echo "âš ï¸  swag not installed. Run 'task tools:install' first"
        fi

  logs:
    desc: Show application logs
    cmds:
      - echo "ðŸ“‹ Application logs:"
      - echo "Backend log:"
      - tail -f backend.log 2>/dev/null || echo "No backend log file found"
      - echo "Frontend log:"
      - tail -f frontend.log 2>/dev/null || echo "No frontend log file found"

  # =============================================================================
  # QUICK COMMANDS
  # =============================================================================
  
  start:
    desc: Quick start (alias for dev)
    cmds:
      - task: dev

  stop:
    desc: Stop all services
    cmds:
      - task: "dev:stop"
      - task: db:stop

  restart:
    desc: Restart development environment
    cmds:
      - task: stop
      - task: dev

  status:
    desc: Show status of all services
    cmds:
      - task: info